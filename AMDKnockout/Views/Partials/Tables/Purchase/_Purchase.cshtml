    <thead>
        <tr class="table-row">
            <th class="col-large"></th>
            <th class="col-medium" data-bind="click: App.PurchaseController.Table.sortByPurchase">
                <a href="#">Purchases</a>
            </th>
            <th class="col-small" data-bind="click: App.PurchaseController.Table.sortBySavings">
                <a href="#">Savings</a>
            </th>
            <th class="col-small" data-bind="click: App.PurchaseController.Table.sortByEligibility">
                <a href="#">Eligibility</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody data-bind="foreach: cards">
        @Html.Partial(Url.Content("~/Views/Partials/Tables/Purchase/_TableRow.cshtml"))
    </tbody>
</table>

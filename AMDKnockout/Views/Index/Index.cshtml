@model AMDKnockout.Models.ResponseData

@{
    ViewBag.Title = "Credit Cards";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="@Url.Content("~/Public/styles/cardstable.css")"/>

<div class="container">
    <div class="row-fluid">
        <div class="span12">
            <h2>Your results</h2>
        </div>
    </div>
    <div id="results" class="row-fluid" style="visibility: hidden;">
        <div class="span3" style="margin-top: 35px;">
            <div data-controller="category">
                @Html.Partial(Url.Content("~/Views/Partials/_CategoryMenu.cshtml"))
            </div>
            <div data-controller="calculator">
                @Html.Partial(Url.Content("~/Views/Partials/_Calculators.cshtml"))
            </div>
        </div>
        <div class="span9">
            <div data-controller="table">
                <table id="cardstable" class="table table-hover">
                    <thead>
                        <tr class="table-row">
                            <th class="col-large"></th>
                            <th class="col-medium" data-bind="visible: BalanceTransfer, click: App.Controller.CardsTable.sortByBalanceTransfer">
                                <a href="#">Balance Transfers</a>
                            </th>
                            <th class="col-small" data-bind="visible: BalanceTransferFee, click: App.Controller.CardsTable.sortByBalanceTransferFee">
                                <a href="#">Transfer Fee</a>
                            </th>
                            <th class="col-medium" data-bind="visible: Purchase, click: App.Controller.CardsTable.sortByPurchase">
                                <a href="#">Purchases</a>
                            </th>
                            <th class="col-large" data-bind="visible: OfferDetails">
                                <a href="#">Offer Details</a>
                            </th>
                            <th class="col-small" data-bind="visible: Savings, click: App.Controller.CardsTable.sortBySavings">
                                <a href="#">Savings</a>
                            </th>
                            <th class="col-small" data-bind="visible: Eligibility, click: App.Controller.CardsTable.sortByEligibility">
                                <a href="#">Eligibility</a>
                            </th>
                            <th class="col-small" data-bind="visible: Apr, click: App.Controller.CardsTable.sortByApr">
                                <a href="#">APR</a>
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody id="creditcards" data-bind="foreach: cards">
                        @Html.Partial(Url.Content("~/Views/Partials/_CreditCardTableRow.cshtml"))
                    </tbody>
                </table>
            </div>
            <div style="text-align: center; margin: 10px 0;" data-bind="visible: showMore()">
                <a class="btn btn-inverse">Show More Cards</a>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    window.ResponseData = @Html.Raw(Model.Data)
</script>
